<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report 
        id="action_report_product_project"
        model="project.project"
        string="Project product report"
        report_type="qweb-pdf"
        name="con_project_works.report_product_project"
        file="con_project_works.report_product_project" 
    />
    
    <template id="report_product_project">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <center><h1>Saldo en obra</h1></center>
                    <div class="row mt32">
                        <div class="col-xs-3">
                        <strong>Dates:</strong>
                        <t t-foreach="project_ids" t-as="o">
                            <span t-esc="o.name"/>
                        </t>
                        <p>
                            <p>
                            Date from: <span t-esc="date_from"/><br />
                            Date to: <span t-esc="date_to"/>
                            </p>
                        </p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>