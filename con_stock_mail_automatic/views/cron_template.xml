<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="stock_email_confirmation" model="ir.ui.view">
            <field name="name">stock.email.confirmation.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="arch" type="xml">
                <data>
                  <xpath expr="//button[@name='action_send_confirmation_email']" position="replace">
                      <button name="action_send_confirmation_email" string="Send Confirmation Email" type="object" attrs="{'invisible':['|', ('state', '!=', 'done'), ('carrier_id', '=', False)]}"/>
                      <button name="send_mail_notification" string="Send Confirmation Email 2" type="object" attrs="{'invisible':['|', ('state', '!=', 'done'), ('carrier_id', '=', False)]}"/>
                   </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>