<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="stock_automatic_email_template" model="mail.template">
            <field name="model_id" ref="con_stock_mail_automatic.model_stock_picking"/>
            <field name="auto_delete" eval="True"/>
            <field name="name">Send stock moves mail</field>
            <field name="subject">${ctx['subject']}</field>
            <field name="email_from">${ctx['senders'].login}</field>
            <field name="email_to">${ctx['recipients']}</field>
            <field name="body_html"><![CDATA[

% set moves = ctx.get('move_ids', [])

% if moves:

    <table border="1">
        <thead>
            <tr>
                <th colspan="8">Moves details</th>
            </tr>
            <tr>
                <th>Date</th>
                <th>Work</th>
                <th>Product</th>
                <th>Client</th>
                <th>Picking type</th>
            </tr>
        </thead>
        <tbody>
        % for line in moves:                           
            <tr>
                <td>                                            
                    ${line['date']}                                   
                </td>
                <td>
                    ${line['picking_id'].project_id.name}
                </td>                 
                <td>
                    ${line['product_id'].name}            
                </td>           
                <td>
                     ${line['picking_id'].partner_id.name}
                </td>
                <td>
                    ${line['picking_id'].picking_type_id.name}  
                </td>                          
            </tr>
        % endfor                                        
        </tbody>
    </table>
% endif

]]></field>

        </record>

    </data>
</odoo>