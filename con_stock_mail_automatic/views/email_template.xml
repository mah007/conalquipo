<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="con_stock_mail_automatic.notification_email_template" model="mail.template">
            <field name="model_id" ref="con_stock_mail_automatic.model_stock_picking"/>
            <field name="auto_delete" eval="True"/>
            <field name="name">Send stock moves mail</field>
            <field name="subject">${ctx['subject']}</field>
            <field name="email_from">${ctx['senders'].login}</field>
            <field name="email_to">${ctx['recipients']}</field>
            <field name="body_html"><![CDATA[

% set moves = ctx.get('move_ids', [])

% if moves:

    <table border="1">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Product</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Quantity</th>
                <th>State</th>
                <th>Date expected</th>
            </tr>
        </thead>
        <tbody>
        % for line in moves:                                   
            <tr>
                <td>                                            
                    ${line['reference']}                                   
                </td>
                <td>                                            
                    ${line['name']}                                   
                </td>
                <td>                                            
                    ${line['location_id'].complete_name}    
                </td>            
                <td>                                            
                    ${line['location_dest_id'].complete_name}       
                </td>
                <td>                                            
                    ${line['product_uom_qty']}                               
                </td>
                <td>                                         
                    ${line['state']}                               
                </td>                   
                <td>   
                    ${line['date_expected']}      
                </td>            
            </tr>
        % endfor                                        
        </tbody>
    </table>

% endif

]]></field>

        </record>

    </data>
</odoo>