<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="notification_email_template" model="mail.template">
          <field name="name">Stock moves notification e-mail</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">Stock moves notification e-mail ${object.name}</field>
          <field name="email_to">${object.email|safe}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="base.model_stock_picking"/>
          <field name="auto_delete" eval="True"/>
            <field name="body_html">
                      <![CDATA[
                <!-- Your e-mail body (the HTML) will be added here later -->
              ]]>
            </field>
       </record>

    </data>
</odoo>