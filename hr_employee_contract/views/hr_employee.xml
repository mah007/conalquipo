<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="hr_employee_form_inherit_cont" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.cont</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <field name="job_id" position="after">
                <field name="contract_id"/>
            </field>

        </field>
    </record>

    <record id="hr_contract_form_inherit_cont" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.cont</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">

            <field name="wage" position="after">
                <field name="wage_type"/>
            </field>

        </field>
    </record>

  </data>
</openerp>
