<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="characteristic_form_view" model="ir.ui.view">
        <field name="name">characteristic.form</field>
        <field name="model">characteristic</field>
        <field name="arch" type="xml">
            <form string="Characteristic">
                <group>
                    <field name="code"/>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="characteristic_form_action" model="ir.actions.act_window">
        <field name="name">Characteristic the product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">characteristic</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new characteristic the product.
          </p>
        </field>
    </record>

    <menuitem action="con_product.characteristic_form_action" id="menu_purchase_characteristic_form_action"
             parent="purchase.menu_product_in_config_purchase" sequence="10" />
    <menuitem action="con_product.characteristic_form_action" id="menu_characteristic_form_action"
               parent="sale.prod_config_main" sequence="8" />
    <menuitem action="con_product.characteristic_form_action" id="menu_stock_characteristic_form_action"
        parent="stock.menu_product_in_config_stock" sequence="6" />


    <record id="con_product_template_view_inherit" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//group[@name='operated']" position="after">
                 <group>
                     <separator string="Characteristic"/>
                 </group>
                 <group name="characteristic" col="2">
                     <field name="characteristic" class="oe_no_button" widget="one2many_list" />
                 </group>
              </xpath>
         </field>
    </record>

</odoo>