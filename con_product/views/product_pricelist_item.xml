<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_pricelist_item_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.item.inherit</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//form/group[2]/group/div" position="inside">
                        <div attrs="{'invisible':[('compute_price', '!=', 'on_total')]}">
                            <field name="percent_price_total" nolabel="1" class="oe_inline"/>%%
                        </div>
                    </xpath>

                </data>
            </field>
        </record>

        <record id="product_pricelist_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.inherit</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//field[@name='item_ids']/tree/field[@name='compute_price']" position="before">
                        <field name="percent_price_total" invisible="1"/>
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</odoo>
