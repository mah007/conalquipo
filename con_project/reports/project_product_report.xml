<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report 
        id="action_report_product_project"
        model="project.project"
        string="Project product report"
        report_type="qweb-pdf"
        name="con_project_works.report_product_project"
        file="con_project_works.report_product_project" 
    />
    
    <template id="report_product_project">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <center><h1>Products on works</h1></center>
                    <div class="row mt32">
                        <div class="col-xs-3">
                        
                            <strong>Dates:</strong>
                            <p>
                                <p>
                                Date from: <span t-esc="data['date_from']"/><br />
                                Date to: <span t-esc="data['date_to']"/>
                                </p>
                            </p>
                        </div>
                    </div>
            
                    <t t-foreach="data['project_ids']" t-as="project">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>
                                        <strong>
                                            <span t-esc="project.name"/>
                                        </strong>
                                    </th>
                                </tr>
                                <tr>
                                    <th align="left" bgcolor="#A9A9A9">Date</th>
                                    <th align="left" bgcolor="#A9A9A9">Reference</th>
                                    <th align="left" bgcolor="#A9A9A9">Product</th>
                                    <th align="left" bgcolor="#A9A9A9">Qty done</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data['move_line_ids']" t-as="moves">
                                    <tr> 
                                        <td>
                                            <span t-esc="moves.date"/>
                                        </td>
                                        <td>
                                            <span t-esc="moves.reference"/>
                                        </td>
                                        <td>
                                            <span t-esc="moves.product_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="moves.qty_done"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                </div>
            </t>
        </t>
    </template>

</odoo>