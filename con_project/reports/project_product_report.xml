<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report 
        id="action_report_product_project"
        model="project.project"
        string="Project product report"
        report_type="qweb-pdf"
        menu="False"
        name="con_project.report_product_project"
        file="con_project.report_product_project" 
    />
    
    <template id="report_product_project">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <center><h1>Products on works</h1></center>
            
                    <t t-foreach="data['partner_ids']" t-as="partner">
                        <t t-foreach="data['picking_ids']" t-as="picking">
                            <t t-if="picking.project_id.partner_id.id == partner.id">
                                <table class="table table-condensed">
                                    <tr>
                                        <th align="left" bgcolor="#A9A9A9">
                                            <strong>
                                                <span t-esc="partner.name"/>
                                            </strong>
                                        </th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <td align="left" bgcolor="#A9A9A9">
                                            <strong>
                                                <span t-esc="picking.project_id.name"/>
                                            </strong>
                                        </td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                        <tr>
                                            <th align="left" bgcolor="#A9A9A9">Producto</th>
                                            <th align="left" bgcolor="#A9A9A9">Disponibilidad</th>
                                            <th align="left" bgcolor="#A9A9A9">Cantidad en obra</th>
                                        </tr>
                                        <tr>
                                            <t t-foreach="picking.move_lines" t-as="moves">
                                                <td>
                                                    <span t-esc="moves.product_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-esc="moves.sale_line_id.real_available"/>
                                                </td>
                                                <td>
                                                    <span t-esc="moves.product_count"/>
                                                </td>
                                                <td>
                                                </td>
                                            </t>
                                        </tr>
                                </table>
                            </t>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

</odoo>