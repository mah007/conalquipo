<?xml version="1.0"?>
<odoo>
    <data noupdate="0">

        <!-- Logistica -->
        <record id="partner_coordinador_auxlogistica" model="res.partner">
            <field name="name">Coordinar / Auxiliar logistica</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="country_id" ref="base.co"/>
        </record>

        <record id="user_logistica" model="res.users">
            <field name="partner_id" ref="con_base.partner_coordinador_auxlogistica"/>
            <field name="login">logistica</field>
            <field name="password">logistica</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('stock.group_stock_user'), ref('mrp.group_mrp_user'), ref('fleet.fleet_group_user')])]"/>
        </record> 

        <record id="partner_dlogistica" model="res.partner">
            <field name="name">Directior Logistica</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="country_id" ref="base.co"/>
        </record>

        <record id="user_dlogistica" model="res.users">
            <field name="partner_id" ref="con_base.partner_dlogistica"/>
            <field name="login">dlogistica</field>
            <field name="password">dlogistica</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('stock.group_stock_manager'), ref('sales_team.group_sale_salesman'), ref('mrp.group_mrp_user'), ref('fleet.fleet_group_manager')])]"/>
            <field name="users" eval="[(3,ref('account.group_account_invoice'))]"/>
        </record> 

        <!-- COMERCIAL -->
        <record id="partner_comercial" model="res.partner">
            <field name="name">Comercial</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="country_id" ref="base.co"/>
        </record>

        <record id="user_comercial" model="res.users">
            <field name="partner_id" ref="con_base.partner_comercial"/>
            <field name="login">comercial</field>
            <field name="password">comercial</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('sales_team.group_sale_salesman'), ref('project.group_project_manager'), ref('fleet.fleet_group_user'), ref('base.group_partner_manager')])]"/>
        </record> 

        <record id="partner_dcomercial" model="res.partner">
            <field name="name">Director Comercial</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="country_id" ref="base.co"/>
        </record>

        <record id="user_dcomercial" model="res.users">
            <field name="partner_id" ref="con_base.partner_dcomercial"/>
            <field name="login">dcomercial</field>
            <field name="password">dcomercial</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('sales_team.group_sale_manager'), ref('project.group_project_manager'), ref('fleet.fleet_group_user'), ref('base.group_partner_manager')])]"/>
        </record> 


    </data>
</odoo>