<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Replacement product available Wizard-->
        <record id="product_replacement_wizard_view" model="ir.ui.view">
            <field name="name">Product replacements Wizard</field>
            <field name="model">product.replacements</field>
            <field name="arch" type="xml">
                <form string="Product replacements">

                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="init_date" required="1"/>
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines" invisible="0">
                            <field name="invoice_lines_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="print_report" type="object" class="oe_highlight" string="Proceed" attrs="{'readonly': [('invoice_lines_ids', '=', False)]}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_wizard_replacements"
            name="Products replacements"
            src_model="account.invoice"
            res_model="product.replacements"
            view_mode="form"
            target="new"
            key2="client_action_multi"/>

        <menuitem id="menu_product_replacements"
            name="Products replacements"
            sequence="0"
            parent="account.account_management_menu"
            action="con_account.action_wizard_replacements"/>

    </data>
</odoo>