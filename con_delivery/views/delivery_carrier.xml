<?xml version="1.0" encoding="utf-8"?>
    <odoo>

        <record model="ir.ui.view" id="view_delivery_carrier_form_inherit">
              <field name="name">delivery.carrier.form</field>
              <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
              <field name="model">delivery.carrier</field>
              <field name="arch" type="xml">
                  <xpath expr="//page[2]" position="after">
                        <page string="Product" name="product">
                            <group>
                                <group>
                                    <field name="products" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                  </xpath>
                   <xpath expr="//page[3]" position="after">
                        <page string="Cost for Vehicle" name="vehicle">
                            <group>
                                <group>
                                    <field name="delivery_carrier_cost" mode="tree" nolabel="1">
                                         <tree editable="bottom">
                                             <field name="vehicle"/>
                                             <field name="cost"/>
                                         </tree>
                                    </field>
                                </group>
                            </group>
                        </page>
                  </xpath>
              </field>
        </record>

        <record model="ir.ui.view" id="view_template_property_form_inherit">
                  <field name="name">product.form.mrp.inherit</field>
                  <field name="model">product.template</field>
                  <field name="inherit_id" ref="stock.view_template_property_form"/>
                  <field name="arch" type="xml">
                      <xpath expr="//group[@name='sale_condition']" position="after">
                          <group name="delivery_carrier">
                              <group name="carrier_area" string="Carrier Area">
                                  <div>
                                      <field name="area_delivery_carrier"
                                             widget="many2many_tags"/>
                                  </div>
                              </group>
                          </group>
                      </xpath>
                  </field>
         </record>

        <record id="view_picking_withcarrier_out_form_inherit" model="ir.ui.view">
                <field name="name">delivery.stock.picking_withcarrier.form.view.inherit</field>
                <field name="model">stock.picking</field>
                <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
                <field name="arch" type="xml">
                  <data>
                        <xpath expr="//field[@name='carrier_id']" position="replace">
                           <field name="carrier_id"  class="oe_inline" options="{'no_create': True, 'no_open': True}"
                           attrs="{'readonly': [('state', '=', 'done')],
                                   'invisible': [('carrier_type','!=', 'company')]}"/>
                        </xpath>
                        <xpath expr="//field[@name='carrier_id']" position="before">
                            <field name="carrier_type" widget="radio"  attrs="{'readonly':[('state','not in',('draft','sent'))]}"/>
                        </xpath>
                        <xpath expr="//group[@name='carrier_data']" position="after">
                            <group name="info_carrier">
                                <field name="stock_picking_delivery" mode="tree" nolabel="1"
                                    attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('carrier_type','!=', 'company')]}">
                                    <tree editable="bottom">
                                         <field name="type_responsible"/>
                                         <field name="responsible"/>
                                         <field name="vehicle_id"/>
                                    </tree>
                                </field>

                                <field name="vehicle_client" class="oe_inline" label="Vehicle Client"
                                attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('carrier_type','!=', 'client')]}"/>

                                <field name="driver_client"  class="oe_inline" label="Driver Client"
                                attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('carrier_type','!=', 'client')]}"/>
                            </group>
                        </xpath>
                  </data>
                </field>
        </record>

    </odoo>