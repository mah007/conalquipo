<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_operator_report_tree" model="ir.ui.view">
        <field name="name">operator.report.tree</field>
        <field name="model">operator.report</field>
        <field name="arch" type="xml">
            <tree string="Operator Availability" create="0" delete="0">
                <field name="operator"/>
                <field name="availability"/>
                <field name="construction"/>
                <field name="picking"/>
                <field name="product"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_operator_pivot">
        <field name="name">operator.report.pivot</field>
        <field name="model">operator.report</field>
        <field name="arch" type="xml">
            <pivot string="Operator Availability" disable_linking="True">
                <field name="operator" type="row"/>
                <field name="availability" type="row"/>
                <field name="construction" type="row"/>
                <field name="start_date" interval="" nterval="month" type="col"/>
                <field name="end_date" interval="month" type="col"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="view_operator_report_graph">
        <field name="name">operator.report.graph</field>
        <field name="model">operator.report</field>
        <field name="arch" type="xml">
            <graph string="Operator Availability">
                <field name="operator"/>
                <field name="availability"/>
            </graph>
        </field>
    </record>

    <record id="view_operator_report_search" model="ir.ui.view">
        <field name="name">operator.report.search</field>
        <field name="model">operator.report</field>
        <field name="arch" type="xml">
            <search string="Operator Availability">
                <field name="operator"/>
                <field name="product"/>
                <field name="construction"/>
                <field name="product"/>
                 <field name="start_date"/>
                <field name="end_date"/>
                <group expand="1" string="Group By">
                    <filter string="Construction" name="group_construction" context="{'group_by':'construction'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product'}"/>
                    <filter string="Availability" name="group_availability" context="{'group_by':'availability'}"/>
                    <separator/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_operator_report_all" model="ir.actions.act_window">
        <field name="name">Operator Availability</field>
        <field name="res_model">operator.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,pivot,graph</field>
    </record>

    <menuitem id="menu_operator_report" name="Operator Availability"
              parent="stock.menu_warehouse_report" sequence="160"
              action="action_operator_report_all"/>

</odoo>