<odoo>
    <template id="report_clause">
        <t t-call="report.html_container">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
            <div class="header">
            </div>
            <div class="page" style="page-break-inside: avoid !important;">
                <br/>
                <t t-foreach="o.pack_detail_product_ids" t-as="product_ids">
                    <t t-if="product_ids.product_t_id.clause">
                     <t t-esc="o.company_id.clause"/>
                    </t>

                </t>

            </div>
        </t>
    </template>
    <template id="report_clause_con">
        <t t-foreach="docs" t-as="o">
            <t t-call="con_stock.report_clause" t-lang="o.partner_id.lang"/>
        </t>
    </template>
    <report
        string="CLause"
        id="action_report_clause_con"
        model="stock.picking"
        report_type="qweb-pdf"
        name="con_stock.report_clause_con"
        file="con_stock.report_clause_con"
        menu = "False"
    />

    <record id="con_view_picking_form_clause" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field eval="12" name="priority"/>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//button[@name='button_scrap']" position="inside">
                    <field name="print_clause" invisible="1" />
                    <button name="%(action_report_clause_con)d" string="Clause"
                          type="action" attrs="{'invisible': [('print_clause','=', False)]}"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>