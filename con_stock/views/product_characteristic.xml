<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="characteristic_form_view" model="ir.ui.view">
        <field name="name">characteristic.form</field>
        <field name="model">characteristic</field>
        <field name="arch" type="xml">
            <form string="Characteristic">
                <group>
                    <field name="code"/>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="characteristic_form_action" model="ir.actions.act_window">
        <field name="name">Characteristic the product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">characteristic</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new characteristic the product.
          </p>
        </field>
    </record>

    <menuitem action="con_stock.characteristic_form_action" id="menu_purchase_characteristic_form_action"
             parent="purchase.menu_product_in_config_purchase" sequence="10" />
    <menuitem action="con_stock.characteristic_form_action" id="menu_characteristic_form_action"
               parent="sale.prod_config_main" sequence="8" />
    <menuitem action="con_stock.characteristic_form_action" id="menu_stock_characteristic_form_action"
        parent="stock.menu_product_in_config_stock" sequence="6" />

    <record id="view_company_form_inherit" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
             <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                     <page string="Clause">
                         <group>
                              <field name="clause" nolabel="1" placeholder="Clause"/>
                         </group>
                     </page>
                </xpath>
            </field>
    </record>

</odoo>