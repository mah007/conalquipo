<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Report configuration -->
        <record id="partner_warnings_form_view" model="ir.ui.view">
            <field name="name">partner.warnings.form.view</field>
            <field name="model">partner.warnings</field>
            <field name="arch" type="xml">
                <form string="Partner Trust Codes">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="warning_type"/>
                            <field name="message_type"/>
                            <field name="message_body"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="partner_warnings_tree_view" model="ir.ui.view">
            <field name="name">partner.warnings.tree.view</field>
            <field name="model">partner.warnings</field>
            <field name="arch" type="xml">
                <tree string="Partner Trust Codes">
                        <field name="name"/>
                        <field name="warning_type"/>
                        <field name="message_type"/>
                </tree>
            </field>
        </record>

        <record id="partner_warnings_search_view" model="ir.ui.view">
            <field name="name">partner.warnings.search.view</field>
            <field name="model">partner.warnings</field>
            <field name="arch" type="xml">
                <search string="Search Name">
                    <filter string="Picking messages" domain="[('warning_type','=','sale_warn')]"/>
                    <filter string="Sale messages" domain="[('warning_type','=','picking_warn')]"/>
                    <group string="Group By Name">
                        <filter string="Warning type"  context="{'group_by' : 'warning_type'}"/>
                        <filter string="Message type"  context="{'group_by' : 'message_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id='partner_warnings_configuration_action' model='ir.actions.act_window'>
            <field name="name">Partner Codes</field>
            <field name="res_model">partner.warnings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            action="partner_warnings_configuration_action"
            id="partner_warnings_configuration"
            parent="sale.menu_sales_config"
            sequence="99"
            name="Partner Trust Codes"
        />

        <record model="ir.ui.view" id="view_res_partner_form_inherit">
             <field name="name">res.partner.form</field>
             <field name="inherit_id" ref="account.view_partner_property_form"/>
             <field name="model">res.partner</field>
             <field name="arch" type="xml">
               <field name="trust" position="after">
                 <field name="trust_code" />
               </field>
             </field>
        </record>

</odoo>