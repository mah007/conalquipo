<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- SIMPLIFIED PROJECT VIEW -->
    <record id="res_partner_form_works" model="ir.ui.view">
      <field name="name">res.partner.form.work</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="type" position="after">
          <field name="is_work" />
          <field name="partner_code" required="1"/>
        </field>

        <field name="street2" position="after">
          <field name="municipality_id" placeholder="Municipality"/>
        </field>
        <notebook position="inside">
            <page string="Work" name="work" attrs="{'invisible': [('is_work', '!=', True)]}">
              <group>
                <group name="g1" col="4" colspan="4">
                  <field name="work_code" attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="work_date_creation"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="invoice_limit_date"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="legal_responsible"  attrs="{'required': [('is_work', '=', True)]}"/>
                </group>
              </group>
              <group>
                <group name="g2" col="4" colspan="4">
                  <field name="contract_number"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="work_responsible"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="work_resident"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="work_storer"  attrs="{'required': [('is_work', '=', True)]}"/>
                </group>
              </group>
              <group>
                <group name="g3" col="4" colspan="4">
                  <field name="work_contract"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="work_phone"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="owner_phone"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="work_interventor"  attrs="{'required': [('is_work', '=', True)]}"/>
                  <field name="interventor_phone"  attrs="{'required': [('is_work', '=', True)]}"/>
                </group>
              </group>
              <group name="g4" string="Observations">
                  <field name="observations" nolabel="1"/>
              </group>
            </page>
          </notebook>
      </field>
    </record>

      <record id="view_res_partner_filter_con" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                  <data>
                     <xpath expr="//filter[@name='customer']" position="after">
                       <filter string="Is Work" name="is_work" domain="[('is_work','=',True)]"/>
                    </xpath>
                </data>
            </field>
      </record>
     <record id="action_partner_form_con" model="ir.actions.act_window">
            <field name="name">Proyects</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_is_work': True}</field>
            <field name="search_view_id" ref="view_res_partner_filter_con"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        <record id="action_partner_form_view_con1" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="action_partner_form_con"/>
        </record>
        <record id="action_partner_form_view_con2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="base.view_partner_form"/>
            <field name="act_window_id" ref="action_partner_form_con"/>
        </record>
        <record id="action_partner_tree_view_con1" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_partner_tree"/>
            <field name="act_window_id" ref="action_partner_form_con"/>
        </record>

      <menuitem id="menu_partner_form_con" parent="sales_team.menu_sales" action="action_partner_form_con" sequence="3"/>

    </data>
</openerp>
